{
  "name": "Bulk URL Opener",
  "short_name": "BulkOpen",
  "author": "Euan Riggans",
  "manifest_version": 2,
  "version": "1.5.0",
  "description": "A Firefox Addon that provides the user with lots of features to handle lists of urls.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icon/64.png",
    "default_title": "Bulk URL Open",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "64": "icon/64.png",
    "128": "icon/128.png"
  }
}