{
  "name": "Bulk URL Opener",
  "short_name": "BulkOpen",
  "author": "Euan",
  "manifest_version": 2,
  "version": "0.6.0",
  "description": "Allows user to open a list of url in one click.",  
  "permissions": [
    "tabs"  
  ],
  "browser_action": {
    "default_icon":  "icon/icon-48.png",
    "default_title": "Bulk URL Open",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon/icon-16.png",
    "48": "icon/icon-48.png",
    "128": "icon/icon-128.png"
  }
}
